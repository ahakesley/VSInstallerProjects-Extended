<Window x:Class="SetupProjectHelper.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:SetupProjectHelper.ViewModels"
        mc:Ignorable="d"
        Title="{Binding WindowHeader}"
        SizeToContent="Width"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <viewModels:ViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <DataGrid ItemsSource="{Binding AssemblyFiles}" AutoGenerateColumns="False" Width="Auto" SelectedItem="{Binding SelectedFileEntryViewModel, Mode=TwoWay}">
            <DataGrid.ItemContainerStyle>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="MouseDoubleClick"
                                 Handler="DataGridRow_MouseDoubleClick" />
                </Style>
            </DataGrid.ItemContainerStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding Name, Mode=OneWay}"
                                    Width="Auto"/>

                <DataGridTextColumn Header="Version"
                                    Binding="{Binding Version, Mode=OneWay}"
                                    Width="Auto"/>
                
                <DataGridTextColumn Header="Culture"
                                    Binding="{Binding Culture, Mode=OneWay}"
                                    Width="Auto"/>

                <DataGridTextColumn Header="Public Key Token"
                                    Binding="{Binding PublicKeyToken, Mode=OneWay}"
                                    Width="Auto"/>
                
                <DataGridTextColumn Header="Processor Architecture"
                                    Binding="{Binding ProcessorArchitecture, Mode=OneWay}"
                                    Width="Auto"/>

                <DataGridTextColumn Header="Source Path"
                                    Binding="{Binding SourcePath, Mode=OneWay}"
                                    Width="Auto"/>

                <DataGridTextColumn Header="Folder"
                                    Binding="{Binding Folder, Mode=OneWay, FallbackValue='N/A'}"
                                    Width="Auto"/>

            </DataGrid.Columns>
        </DataGrid>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="0 0 3 0"></Setter>
                    <Setter Property="Padding" Value="10 5"></Setter>
                </Style>
            </StackPanel.Resources>
            <Button Content="Save (TO IMPLEMENT)" IsEnabled="False"></Button>
            <Button Content="Save As... (TO IMPLEMENT)" IsEnabled="False"></Button>
            <Button Content="Add... (TO IMPLEMENT)" IsEnabled="False"></Button>
            <Button Content="Delete (TO IMPLEMENT)" IsEnabled="False"></Button>
            <Button Content="Delete All (TO IMPLEMENT)" IsEnabled="False"></Button>
        </StackPanel>
    </Grid>
</Window>
